<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardviewItemAsig"
        android:layout_margin="2dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            >

            <ImageView
                android:id="@+id/imageViewIcon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.4"
                android:adjustViewBounds="true"
                android:layout_margin="4dp"
                android:src="@drawable/ic_learning" />

            <TextView
                android:id="@+id/textNombreAsig"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Calculo I"
                android:textSize="25dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
               >

                <TextView
                    android:id="@+id/textPromAsig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Prom. Actual : 6.5"
                    android:textSize="12dp"
                    android:textStyle="italic"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"/>

                <TextView
                    android:id="@+id/textEximAsig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Prom. Meta : 6.5"
                    android:textSize="12dp"
                    android:textStyle="italic"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
